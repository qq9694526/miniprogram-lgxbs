/* pages/book-list/book-list.wxss */
@import "../../tpl/nodata/nodata.wxss";
.tabbar{
  justify-content: space-around;
}
.tabbar .item {
  flex: 0 0 30%;
}

.book-card {
  padding: 30rpx;
}

.book-card .item {
  border-radius: 20rpx;
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.book-card .title {
  display: flex;
  justify-content: space-between;
}

.book-card .title text {
  font-size: 30rpx;
}

.book-card .title .color-green {
  color: #5dd4a1;
}

.book-card .row {
  color: #666;
  line-height: 32rpx;
  margin:20rpx 0;
}

.book-card .row .icon {
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 20rpx;
}
.book-card .btn-wrap{
  text-align: right;
  padding-top: 10rpx;
}
.book-card .btn{
  display: inline-block;
  font-size: 32rpx;
  padding: 15rpx 35rpx;
  border-radius: 80rpx;
  color: #fff;
  line-height: 1;
  background-color: #57d2a0;
}
