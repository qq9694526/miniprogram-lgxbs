/**index.wxss**/
.user{
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
}
.user image{
  width: 100rpx;
  height: 100rpx;
}
.grid-wrap{
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx 30rpx;
  box-sizing: border-box;
}
.grid-wrap .item{
  flex: 0 0 20%;
  text-align: center;
  margin: 20rpx 0 10rpx 0;
}
.grid-wrap image{
  display: block;
  width: 80%;
  margin: 0 auto;
  border-radius:40%;
  margin-bottom:20rpx; 
}
.section-title{
  color:#57d2a0;
  border-bottom: 1px solid #efefef;
  text-align: center;
  line-height: 1;
  padding: 30rpx 0;
  font-size: 34rpx;
}
