/* pages/book-release/book-release.wxss */

page {
  padding: 0 30rpx;
  box-sizing: border-box;
}
.tip{
  display: block;
  line-height: 1;
  padding-top: 20rpx;
}
.color-red{
  color: red;
}
.cell {
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  border-radius:20rpx;
}

.cell .lable {
  flex: 0 0 130rpx;
  height: 100rpx;
  line-height: 100rpx;
}

.cell .input {
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: right;
}
.cell.textarea-wrap{
  flex-direction: column;
}
.textarea-wrap .lable{
  flex: 0 0 100rpx;
  border-bottom: 1px solid #efefef;
}
.textarea-wrap .textarea{
  padding: 20rpx 0;
}
.btn{
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #5fd4a2;
  color: #fff;
  border: none;
  margin: 80rpx 0;
}
.cell picker{
  /* float: right; */
  display: inline-block;
  margin-right: 20rpx;
}
picker .picker{
  line-height:100rpx;
}